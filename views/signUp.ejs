<%- layout("layouts/ejs-boilerplate.ejs") %>
<h1 class="text-center pt-4">Sign Up</h1>
<div class="mb-3 col-4 offset-4">
    <form action="/signUp" method="POST" novalidate class="validation-by-ekansh">
        <div class="form-group my-3">
            <label for="email">Email: </label>
            <input class="form-control" type="email" id="email" name="user[email]" required autofocus>
            <div class="valid-feedback">Now it's cool</div>
        </div>
        
        <div class="form-group my-3">
            <label for="username">Username: </label>
            <input class="form-control" type="text" id="username" name="user[username]" required>
        </div>

        <div class="form-group my-3">
            <label for="name">Name: </label>
            <input class="form-control" type="text" id="name" name="user[name]" required>
        </div>

        <div class="form-group my-3">
            <label for="password">Password: </label>
            <input class="form-control" type="password" id="password" name="user[password]" required>
        </div>

        <button class="btn btn-success form-control">Sign Up</button>
    </form>

</div>
