<%- layout("layouts/ejs-boilerplate.ejs") %>
<h1 class="text-center pt-4">Login</h1>
<div class="mb-3 col-4 offset-4">
    <form action="/login" method="POST" novalidate class="validation-by-ekansh">
        <div class="form-group my-3">
            <label for="username">Username: </label>
            <input class="form-control" type="text" id="username" name="username" required autofocus>
        </div>

        <div class="form-group my-3">
            <label for="password">Password: </label>
            <input class="form-control" type="password" id="password" name="password" required>
        </div>

        <button class="btn btn-success form-control">Login</button>
    </form>

</div>
