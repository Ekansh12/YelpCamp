<%- layout("layouts/ejs-boilerplate.ejs") %>

    <h1 class="text-center pt-4">Profile</h1>
    <div class="mb-3 col-4 offset-4">
        <form>
            <div class="form-group my-3">
                <label for="name">Name: </label>
                <input class="form-control" type="text" id="name" value=<%= currentUserInfo.name %> readonly>
            </div>

            <div class="form-group my-3">
                <label for="username">Username: </label>
                <input class="form-control" type="text" id="username" value=<%= currentUserInfo.username %> readonly>
            </div>
            
            <div class="form-group my-3">
                <label for="email">Email: </label>
                <input class="form-control" type="email" id="email" value=<%= currentUserInfo.email %>  readonly>
                <div class="valid-feedback">Now it's cool</div>
            </div>
            
        </form>

    </div>
